@model IEnumerable<ORM_Second_Assessment_.Models.Airline>

@{
    ViewData["Title"] = "ListAirlinedata";
}

<h1>ListAirlinedata</h1>

<p>
    <a href="addAirline" class="btn btn-warning">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var temp = "table-warning"; }
@foreach (var item in Model) {
    if(item.Status == "Active")
    {
        temp = "table-info";
    }
    else if(item.Status == "inActive")
    {
        temp = "table-danger";
    }
    else
    {
        temp = "table-danger";
    }
        <tr class="@temp">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a href="/Airline/DeleteAirlinedata?id= @item.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i>Delete</a>
                <a href="/Airline/EditAirlinedata?id=@item.Id" class="btn btn-sm btn-info"><i class="fa fa-pencil"></i>Edit</a>
                <a href="/airline/viewairline?id=@item.Id" class="btn btn-sm btn-success"><i class="fa fa-eye"></i>View</a>
            </td>
        </tr>
}
    </tbody>
</table>
